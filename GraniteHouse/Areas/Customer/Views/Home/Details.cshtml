@model GraniteHouse.Models.Products
@using GraniteHouse.Extensions
@using GraniteHouse.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Details</h2>

<form method="post">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>
            @if (!Model.SpecialTags.Name.Equals("--None--"))
            {
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialTags"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpecialTags.Name" readonly class="form-control" />
                    </div>
                </div>
            }
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ShadeColor" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                </div>
                <div class="col-8">
                    @{
                        bool isInBag = false;
                        List<string> lstCarts = HttpContextAccessor.HttpContext.Session.Get<List<string>>(SD.SessionShoppingCartName);
                        if (lstCarts != null && lstCarts.Contains(Model.Id))
                        {
                            isInBag = true;
                        }
                    }
                    @if (isInBag)
                    {
                        <button type="submit" value="Remove from Bag" asp-action="Remove" asp-route-id="@Model.Id"
                                class="btn btn-danger form-control">
                            Remove from Bag
                        </button>
                    }
                    else
                    {
                        <button type="submit" value="Add to Bag" asp-route-id="@Model.Id" class="btn btn-primary form-control">Add to Bag</button>
                    }
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Image" style="width: 100%; border: 1px solid #bbb9b9; border-radius: 5px;" />
            <br />
            <br />
            @if (Model.Available)
            {
                <img src="~/images/inStock.png" style="width: 50%;" />
            }
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>


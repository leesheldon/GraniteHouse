@model List<GraniteHouse.Models.Products>

<br />
<br />
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: steelblue;">@product.Name</label>
                    </h4>
                </div>
                <img class="card-img-top" style="height: 100%;" src="@product.Image" alt="@product.Name" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color: #a51313;">
                                <strong>$@product.Price</strong>/sq.ft
                            </label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id"
                            class="btn btn-outline-info">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
